  <!-- First Band (Image) -->
    
  <div class="row">
    <div class="tailored gallery" >
        <img id="firstStop" src="<%=asset_path('banded/banded-cover.jpg')%>" />
        <a href="/newindex/browse" class="right button radius large gallery">閱讀遊記</a>
    </div>
