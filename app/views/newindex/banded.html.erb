     <%=f.submit '登入' , :class=>'button medium expand'%>
     <!--<input type="submit" class="alert button medium" value="忘記密碼">-->
     <%if(flash[:loginfail])%>
      <p class="loginfail">您輸入的帳號或密碼有誤</p>
    <%end%>
  </div>

