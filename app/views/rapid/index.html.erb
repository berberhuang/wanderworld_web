<%= content_for :css do %>
	<%= stylesheet_link_tag "index_layout" %>
	<%= stylesheet_link_tag "newindex" %>
<%end%>
<script type="text/javascript">
	//編輯顯示的URL
	window.history.pushState(null,document.title,"<%=@url%>");
	
	//-----------------check user login status------------------//
	
	//是否已登入
	<% if session[:username]%>
		EnvData.is_login=true;
		UserData.user_id=<%=session[:user_id]%>;
	<%end%>

	//是否使用FB登入
	<%if session[:fbid]%>
		UserData.facebook_id=<%=session[:fbid]%>;
	<%else%>
		UserData.facebook_id=false;
	<%end%>

	$(function(){
		initialize();
		<% if @journal_id %>
			loadJournal(<%=@trip_id%>,<%=@journal_id%>);
		<% elsif @trip_id %>
			loadTrip(<%=@trip_id%>);
		<% elsif @user_id %>
			loadTripList(<%=@user_id%>);
		<%end%>
		
	});
</script>


<!--隱藏區塊>
<div id="hide_block" style="display:none">
	 <div id="newTripLoad"></div>
</div-->
<div class="row expandView">

<!--main control-->
	<div class="large-2 columns panel">
	    <div class="row">
	        <% if session[:avatar_src]%>
		    <img src="<%=session[:avatar_src]%>" ></img>
			<% else%>
			<img src='<%=asset_path("user_avatar.png")%>' style="display:block; margin:auto;"></img>
			<% end %>
        	<h5><a id="person_name" href="#" style="display:block;text-align:center;"></a></h5>
        </div>
        <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
        	<section class="section">
        		<h5 class="title"><a href="#" id="firstStop" onclick="showTravelJournal()"><i class="foundicon-flag"></i>旅行列表</a></h5>
        	</section>	
        	<section class="section">
            	<h5 class="title"><a href="/newindex/browse"><i class="foundicon-globe"></i>旅行動態</a></h5>
          	</section>
        </div>
    </div>
	<!--content-->
	<div class="large-8 columns">
		<div class="gallery" id="map_canvas"></div>
	</div>
	<!--triplist-->
	<div id="trip_list" class="list large-2 columns gallery" style="display:none" >
			<a id="trip_create_button" class="button tiny radius" style="position:absolute; right:0px;">
				<i class="foundicon-plus" style="float:left">&nbsp;</i>
				<i class="foundicon-flag" style="float:left"></i>
				<span class="showText">新增旅行</span>
			</a>
		<div class="row" style="margin-top:25px;">
			<h4 style="display:block; text-align:center; margin:0 auto; color:white;">
				<i class="foundicon-flag"></i>旅行列表
			</h4>
		</div>
			<hr />
		<div class="row">
			<div class="row">
				<div class="large-5 columns large-centered">
					<a id="prev" class="button radius" onclick="toTop()" title="至頂端" >TOP</a>
				</div>
			</div>
			<div class="row">
				<div id="timeline">
					<div id="load_trip" class="loading">
						<div class="load_name">請稍候</div>
					</div>
					<ul id="dates"></ul>
				</div>
			</div>
			<div class="row">
				<div class="large-5 columns large-centered">
					<a id="next" class="button radius" onclick="toBottom()" title="至底端">BOTTOM</a>
				</div>
			</div>
		</div>
	</div>
	<!--click on a trip-->
	<div class="large-2 columns gallery list" id="trip_one" style="display:none;">
		<a id="return_triplist" class="button tiny radius secondary" style="position:absolute; left:0px;">
				<i class="foundicon-left-arrow" style="float:left"></i>
				<span class="showText">返回旅行列表</span>
		</a>
		<div class="row" style="margin-top:25px;">
			<h4 style="display:block; text-align:center; margin:0 auto; color:white;">
				<i class="foundicon-add-doc"></i>某一段旅行
			</h4>
		</div>
	<div id="trip_date" class="row"></div>
			<div id="trip_status" class="row" style="display:none;">
				<div style="float:left">狀態：</div>
				<div style="float:left;color:#FB9B35"><!--a></a--></div>
			</div>
	<hr />
			
		</div>
		<div class="row">
			<div class="row loading" id="load_point">
				<div class="load_name">Loading</div>
			</div>
			<div class="row">
				<div id="trip_point_list"></div>
				<div class="add_group_title">
					<button id="group_create_button" class="button" style="background-color: #e9e9e9; color: #1d1d1d; border: 1px solid #c3c3c3;" title="新增一篇遊記">新增遊記</button>
					</div>
			</div>
			<div class="row">
				<div id="view_num">
				<span>瀏覽人次：<span id="count"></span></span>
				</div>
				<div id="sharetoFB">
					<a href="#share_button" rel="facebox.sharecss" id="share" >分享</a>
					<div style="clear: both;display: block"> </div>
				</div>
			</div>
		</div>
	</div>
</div>





