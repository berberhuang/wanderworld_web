/*關於地球漫遊*/
.wanderworld {
  width: 860px;
  -webkit-column-count:2;
  -moz-column-count:2;
  padding: 10px;
  background: #fff;
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  border-radius:4px;
}  


/*facebook登入區塊*/
#fbLoginArea {
	height:120px;
	margin-bottom:10px;
	padding:5px 0px 0px 5px;
	background-color:rgba(240,150,20 ,0.7);
}
fb:login-button #fbLoginButton {
	width:400px;
}
/*註冊&登入*/
.fill_form {
	width:80%;
	min-width:450px;
	top:10%;
	padding:5px 0px 5px 5px;
	border-style:solid;
	border-width:thin;
	border-color:#CCC;
	border-radius:5px;
	background-color:rgba(60,60,60,0.7);
	position:relative;
}
.fill_form h2 {
	margin:0px;
	border-bottom-style:solid;
	border-bottom-width:thin;
	border-bottom:#FFF;

}

.rigistercss {
  height:auto;
  max-width: 550px;
  padding:10px;
  background:#fff;
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  border-radius:4px;
  left:28%;
}
.fill {
	width:200px;
}

.submit {
	position:absolute;
	height:2em;
	width:5em;
	font-size:16px;
	font-family:微軟正黑體;
	float:right;
	right:0px;
	bottom:10px;
}

#footer {
	width:100%;
	height:70px;
	min-width:960px;
	left:0px;
	bottom:0px;
	margin:0px;
	padding:0px;
	z-index:50;
	font-size:14px;
	text-align:center
}

#footer li {
	display:inline-block;
	list-style-type:none;
	padding:100px 10px 0px 10px;
	color:#666;
}
