/* CSS Document */
body {
	font-family:微軟正黑體;
	color:white;
	background-image:url(<%=asset_path('felt.png')%>);
}
h2 {
	font-size:18px;
}

h1 {
	font-size:28px;
}

table {
	text-align:right;
}

/*Header區塊樣式*/
.logo {
	height:40px;
	width:auto;
	margin-top:5px;
	margin-left:5px;
	padding:0;
}

.header {
	width:100%;
	height:50px;
	min-width:960px;
	background:#000;
	position:absolute;
	display:block;
	left:0;
	top:0;
	margin:0px;
	padding:0;
	z-index:50;
	-webkit-box-shadow:0px 3px 10px  #333;
}
.header_inner {
	width: 1024px;
	margin: 60px auto 0px auto;

}

#header_left {
	min-width:850px;
}


#main_list {
	position:absolute;
	bottom:10px;
	right:10px;
}
.floating {
	display:inline;
}

a {
	text-decoration: none;
	color:#666;
}
a:hover {
	color:black;
	font-weight:bold;
}

/*主要內容*/
.content {
	width:90%;
	height:500px;
	min-width:960px;
	padding:0px;
	margin:0 auto;
	position:relative;
	top:5%;
}

/*左半邊*/
.content_left{
	width:50%;
        min-width:450px;
        max-height:100%;
        padding:0px;
        position:relative;
        float:left;
        top:80px;
        left:0px;
}

.content img {
	width:100%;
	position:relative;
	float:left;
}

/*右半邊*/
.content_right {
        width:42%;
        min-width:450px;
        max-height:100%;
        margin-left:30px;
        padding:0px;
        position:relative;
        float:left;
        top:80px;
}



