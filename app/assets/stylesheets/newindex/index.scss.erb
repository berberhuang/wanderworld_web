.slideshow-wrapper{
	margin-bottom: 20px;
}
@media only screen and (min-width: 768px) {
.slide-photos {
  height: 100%;
  }
}

@media only screen and (max-width: 768px) {
.slide-photos {
  height:200px;
  }
}

li .journal-column {
	position: relative;
  	width: 100%;
  	float: left; 
    .classic-image{
      width: 100%;
      height:180px;
    }
    .column-image{
      width:100%;
      height: 150px;
    }
    .journal-info-cover{
      position: absolute;
      bottom: 0px;
      width: 100%;
      padding: 10px 14px;
      background-image:linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,0.6));
      color: white;
      .inline-list {
        margin: -10px;
        line-height: 2em;
        li:first-child{
          margin-left:0px;
        }
      }
    }
}
.journal-title{
  width:100%;
  overflow: hidden;
}

.seperation-line{
	border-right:dashed 2px grey;
}

.orbit-caption .inline-list li{
	line-height: 2.25em;
}
.orbit-caption .inline-list li:first-child{
		margin-left: 0px;
	}