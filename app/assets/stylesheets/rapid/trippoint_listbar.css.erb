/*---------------必要tag設定--------------*/
/*旅行資訊*/


#trip_date {
	width: 100%;
	float:left;
	margin:10px 0px 0px 0px;
}

#trip_date input {
	width:100%;
        font-size:16px;
}

/*景點列表*/

#trip_point_list{
	overflow-x: hidden;
	overflow-y: auto; 
}

.trippoint_placeholder {
	border: 2px dashed #AAA;
	height:20px;
}

/*未整理*/
.trip_point_group {	
	padding-left:1%;
	width: 99%;
	padding-bottom: 10px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}
.trip_point_group:hover  .trip_point_add {
	display: inline;
}
.trip_point_group:hover  .trip_point_edit {
        display: inline;
}
.trip_point_group:hover  .add_trip_point {
        display: inline;
}
.trip_point_group:hover  .add_trip_point_space {
        display: none;
}

.trip_point_group_selected{
	-moz-box-shadow:inset 2px -1px 6px #000000;
	-webkit-box-shadow:inset 2px -1px 6px #000000;
	box-shadow:inset 2px -1px 6px #000000;

	background: -moz-linear-gradient(left,  rgba(86,86,86,1) 0%, rgba(40,52,59,0) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(86,86,86,1)), color-stop(100%,rgba(40,52,59,0))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(left,  rgba(86,86,86,1) 0%,rgba(40,52,59,0) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(left,  rgba(86,86,86,1) 0%,rgba(40,52,59,0) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(left,  rgba(86,86,86,1) 0%,rgba(40,52,59,0) 100%); /* IE10+ */
	background: linear-gradient(to right,  rgba(86,86,86,1) 0%,rgba(40,52,59,0) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#565656', endColorstr='#0028343b',GradientType=1 ); /* IE6-9 */
}

.trip_point_selected{
	background-color:rgba(0, 149, 255, 0.45);
}

.trip_point_title_selected{
	background: -moz-linear-gradient(left,  rgba(100,100,100,0) 0%, rgba(100,100,100,0.68) 7%, rgba(100,100,100,1) 49%, rgba(100,100,100,0.68) 94%, rgba(100,100,100,0) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(100,100,100,0)), color-stop(7%,rgba(100,100,100,0.68)), color-stop(49%,rgba(100,100,100,1)), color-stop(94%,rgba(100,100,100,0.68)), color-stop(100%,rgba(100,100,100,0))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* IE10+ */
	background: linear-gradient(to right,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00646464', endColorstr='#00646464',GradientType=1 ); /* IE6-9 */

}

.trip_point_title input {
	width: 100%;
}
.add_trip_point{
	display:none;
	cursor:pointer;
	float:left;
	width:100%;
	height:40px;
	overflow:hidden;
	background-color:rgba(0,0,0,0.2);
	border-style:dashed;
	border-width:2px;
	border-color:rgba(255,255,255,0.8);
}
.add_trip_point_space{
	float:left
	width:135px;
	height:24px;
}
.add_trip_point img {
	width: 17px;
}
.trip_point_edit {
	display:none;
	height: 18px;
	width: 18px;
	cursor:pointer;
	position: relative;
}
.trip_point_edit img {
	width: 16px;
}
.trip_point {
	list-style-type:none;
}


.point_edit {
	display:none;
}

.point_edit:hover {
	cursor:pointer;
	cursor:hand;  /*if ie*/
}
.point_name {
	width:170px;
	line-height:25px;
	margin-left:25px;
	float:left;
	margin-left:5px;
	cursor: pointer;
	
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border-radius: 2px;
}
.point_edit_menu {
	display: none;
	position: absolute;
	width: 110px;
	right: 0px;
	background: lightGrey;
	border-radius: 3px;
	color: blue;
	text-align: left;
	padding: 2px 0;
}
.point_edit_menu img {
	float: left;
	margin: 1px 5px 1px 0;	
	opacity:1;
}
.point_edit_menu div {
    padding:3px 5px;
	cursor:pointer;
}
.point_edit_menu div:hover {
        background-color:#F8CB9C;
}
.point_edit_menu img {
        height:16px;
}

.group_edit_menu {
	display: none;
	position: absolute;
	width: 120px;
	right: 0px;
	background: lightGrey;
	border-radius: 3px;
	color: blue;
	text-align: left;
	padding:2px 0;
	cursor:pointer;
}
.group_edit_menu img {
	float: left;
	height:16px;
	margin: 1px 5px 1px 0;

}
.group_edit_menu div {
	padding:3px 5px;
}
.group_edit_menu div:hover {
        background-color:#F8CB9C;
}

  
#trip_friend {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}
#trip_friend_add {
	display:none;
	float:right;
	width:18px;
	cursor:pointer;
}
#trip_status {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}







/*讀取列表*/
.loading {
	height:2em;
	line-height: 2em;
	background:rgba(40,40,40,0.7);
	display:none;
}

@-moz-keyframes move{
	0%{-moz-transform: scale(1.2);opacity:1;}
	100%{-moz-transform: scale(0.7);opacity:0.1;}
}
@-webkit-keyframes move{
	0%{-webkit-transform: scale(1.2);opacity:1;}
	100%{-webkit-transform: scale(0.7);opacity:0.1;}
}

