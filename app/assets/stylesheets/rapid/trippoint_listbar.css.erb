/*---------------必要tag設定--------------*/
/*旅行資訊*/


#trip_date {
	width: 100%;
	float:left;
	margin:10px 0px 0px 0px;
}

#trip_date input {
	width:100%;
        font-size:16px;
}

/*景點列表*/
#trip_point_list{
	width:auto;
	overflow: auto;

}

.trippoint_placeholder {
	border: 2px dashed #AAA;
	height:20px;
}

/*未整理*/
.trip_point_group {	
	padding-left:1%;
	width: 99%;
	padding-bottom: 10px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}
.trip_point_group:hover  .trip_point_add {
	/*display: inline;*/
}
.trip_point_group:hover  .trip_point_edit {
        display: inline;
}
.trip_point_group:hover  .add_trip_point {
        display: inline;
}
.trip_point_group:hover  .add_trip_point_space {
        display: none;
}

