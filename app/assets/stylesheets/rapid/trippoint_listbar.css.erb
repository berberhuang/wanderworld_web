/*---------------必要tag設定--------------*/
/*旅行資訊*/

#trip_name{
	margin-top:10px;
}
#trip_name_editDiv{
	height:4.1em;
	cursor:pointer;
	overflow:hidden;
}


#trip_date {
	width: 100%;
	float:left;
	margin:5px 0px 5px 5px;
	font-size: 15px;
}

#trip_date input {
	width:100%;
    font-size:16px;
}
#return_triplist{
	position: absolute;
	left:10px;
	cursor: pointer;
}
#return_triplist i{
	margin-top: -10px;
	margin-left: -5px;
}


/*景點列表*/

.journal_title{
	overflow:hidden;
}

#trip_point_list{
	overflow-x: hidden;
	overflow-y: auto; 
	height: 260px;
}

.trippoint_placeholder {
	border: 2px dashed #AAA;
	height:20px;
}
.point_name{
	cursor: pointer;
}

.point_mark{
	width:20px;
}

/*未整理*/
.trip_point_group {	
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}

.trip_point_group:hover  .trip_point_edit {
        display: inline;
}
.trip_point_group:hover  .add_trip_point {
        visibility: visible;
}

.trip_point_group_selected{
	background-color:rgba(240,239,233,0.1);
}

.trip_point_selected{
	background-color:rgba(0, 149, 255, 0.45);
}

.trip_point_title_selected{
	background: -moz-linear-gradient(left,  rgba(100,100,100,0) 0%, rgba(100,100,100,0.68) 7%, rgba(100,100,100,1) 49%, rgba(100,100,100,0.68) 94%, rgba(100,100,100,0) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(100,100,100,0)), color-stop(7%,rgba(100,100,100,0.68)), color-stop(49%,rgba(100,100,100,1)), color-stop(94%,rgba(100,100,100,0.68)), color-stop(100%,rgba(100,100,100,0))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(left,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* IE10+ */
	background: linear-gradient(to right,  rgba(100,100,100,0) 0%,rgba(100,100,100,0.68) 7%,rgba(100,100,100,1) 49%,rgba(100,100,100,0.68) 94%,rgba(100,100,100,0) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00646464', endColorstr='#00646464',GradientType=1 ); /* IE6-9 */

}

.add_trip_point{
	visibility:hidden;
	cursor:pointer;
	float:left;
	width:90%;
	height:40px;
	overflow:hidden;
	background-color:rgba(0,0,0,0.2);
	border-style:dashed;
	border-width:2px;
	border-color:rgba(255,255,255,0.8);
}

.trip_point_edit {
	display:none;
	cursor:pointer;
}

.trip_point {
	list-style-type:none;
}

.point:hover .point_edit{
	display:inline;
}

.point_edit {
	display:none;
}

.point_edit:hover {
	cursor:pointer;
	cursor:hand;  /*if ie*/
}



.group_edit_menu {
	display: none;
	position: absolute;
	width: 130px;
	background: rgba(153,179,204,1) ;
	border-radius: 3px;
	padding:2px 0;
	cursor:pointer;
	color:black;
}
.group_edit_menu img {
	float: left;
	height:16px;
	margin: 1px 5px 1px 0;

}
.group_edit_menu div {
	padding:3px 5px;
}
.group_edit_menu div:hover {
        background-color:#F8CB9C;
}

  
#trip_friend {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}
#trip_friend_add {
	display:none;
	float:right;
	width:18px;
	cursor:pointer;
}
#trip_status {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}

.hidden {
	visibility:hidden;
}

/*讀取列表*/
.loading {
	height:2em;
	line-height: 2em;
	background:rgba(40,40,40,0.7);
	display:none;
}

@-moz-keyframes move{
	0%{-moz-transform: scale(1.2);opacity:1;}
	100%{-moz-transform: scale(0.7);opacity:0.1;}
}
@-webkit-keyframes move{
	0%{-webkit-transform: scale(1.2);opacity:1;}
	100%{-webkit-transform: scale(0.7);opacity:0.1;}
}

