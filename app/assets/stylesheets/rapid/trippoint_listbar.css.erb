	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00646464', endColorstr='#00646464',GradientType=1 ); /* IE6-9 */

}

.trip_point_title input {
	width: 100%;
}
.add_trip_point{
	display:none;
	cursor:pointer;
	float:left;
	width:150px;
	height:20px;
	overflow:hidden;
	background-color:rgba(0,0,0,0.2);
	padding-left:35%;
	border-style:dashed;
	border-width:2px;
	border-color:rgba(0,0,0,0.4);
}
.add_trip_point_space{
	float:left;
	width:135px;
	height:24px;
}
.add_trip_point img {
	width: 17px;
}
.trip_point_edit {
	display:none;
	height: 18px;
	width: 18px;
	cursor:pointer;
	position: relative;
	float: right;
}
.trip_point_edit img {
	width: 16px;
}
.trip_point {
	list-style-type:none;
	margin:0;
	padding:2px 0px 0px 0px;
	float: left;
	width: 100%;
}
ul.trip_point li:hover  .point_name {
        margin-left:4px;
}
ul.trip_point li:hover  .point_mark {
	display: inline;
}
ul.trip_point li:hover  .point_edit {
	display: inline;
}
.point {
	width: 100%;
}
.point_edit {
	float:right;
	display:none;
	position: relative;
	right: 0px;
	margin: 2px 0;
}
.point_edit img {
	height:20px;
	opacity:0.5;
	/*height:100%;*/
}
.point_edit img:hover {
	opacity:1;
	cursor:pointer;
	cursor:hand;  /*if ie*/
}
.point_mark {
	width:20px;
	height:20px;
	margin: 2px 0 2px 0;	
	float:left;
}
.point_name {
	width:170px;
	line-height:25px;
	margin-left:25px;
	float:left;
	margin-left:5px;
	cursor: pointer;
	
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border-radius: 2px;
}
.point_edit_menu {
	display: none;
	position: absolute;
	width: 110px;
	right: 0px;
	background: lightGrey;
	border-radius: 3px;
	color: blue;
	text-align: left;
	padding: 2px 0;
}
.point_edit_menu img {
	float: left;
	margin: 1px 5px 1px 0;	
	opacity:1;
}
.point_edit_menu div {
    padding:3px 5px;
	cursor:pointer;
}
.point_edit_menu div:hover {
        background-color:#F8CB9C;
}
.point_edit_menu img {
        height:16px;
}

.group_edit_menu {
	display: none;
	position: absolute;
	width: 120px;
	right: 0px;
	background: lightGrey;
	border-radius: 3px;
	color: blue;
	text-align: left;
	padding:2px 0;
	cursor:pointer;
}
.group_edit_menu img {
	float: left;
	height:16px;
	margin: 1px 5px 1px 0;

}
.group_edit_menu div {
	padding:3px 5px;
}
.group_edit_menu div:hover {
        background-color:#F8CB9C;
}

  
#trip_friend {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}
#trip_friend_add {
	display:none;
	float:right;
	width:18px;
	cursor:pointer;
}
#trip_status {
	width: 100%;
	margin: 5px 0px 0px 0px;
	padding: 0px;
	float: left;
}

/*旅行清單*/
.list {
	height:100%;
	min-height: 520px;
	background:rgba(40,40,40,0.6);
	z-index:1;
	color:white;
}
.list a:link ,.list a:visited {
	color:white;
}
.list ::-webkit-scrollbar {
	width: 10px;
	height: 10px;
}
.list ::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    -webkit-border-radius: 10px;
    border-radius: 10px;
}
.list ::-webkit-scrollbar-thumb {
    -webkit-border-radius: 10px;
    border-radius: 10px;
    background: rgba(200,200,200,0.7); 
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
}


#dates {
	width: 100%;
	cursor: url(<%=asset_path('cursor_hand.png')%>),auto;
	position: relative;
}
#dates li {
	list-style: none;	
	font-size: 2em;
}
#dates a {
	color: #ffffcc;
	-webkit-transition: 0.5s;
	-moz-transition: 0.5s;
	-o-transition: 0.5s;
	-ms-transition: 0.5s;
	transition: 0.5s;
	background: url(<%=asset_path('biggerdot.png')%>) left center no-repeat;
	padding-left: 10px;
}
#dates a:hover ,a.selected {
	color: #ffcc00;
}
#dates .selected {
	color: #ffcc00;
}





/*讀取列表*/
.loading {
	height:2em;
	line-height: 2em;
	background:rgba(40,40,40,0.7);
	display:none;
}

@-moz-keyframes move{
	0%{-moz-transform: scale(1.2);opacity:1;}
	100%{-moz-transform: scale(0.7);opacity:0.1;}
}
@-webkit-keyframes move{
	0%{-webkit-transform: scale(1.2);opacity:1;}
	100%{-webkit-transform: scale(0.7);opacity:0.1;}
}

