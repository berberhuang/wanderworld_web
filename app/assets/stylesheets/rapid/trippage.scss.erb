#travel-timeline{
	min-height:300px;
	background:url(<%=asset_path('bg/timeline.gif')%>) repeat-y center top;
}
.travel-item{
	/*margin-bottom:20px !important;*/
	padding: 0;
	background-color: white;
	position: relative;
	.travel-cover{
		padding: 0;
	}
	img{
		width:100%;
	}
}
.travel-info-cover{
	position: absolute;
	bottom: 0px;
	width: 100%;
	padding: 10px 10px 10px 2em;
	background-image:linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,1));
	h1{
		margin: 0px;
	}
}

.picker{
	margin-left: 0.1em;
	li{
		display: block;
		margin-bottom: 5px;
		line-height: 1.5em;
		li:hover{
			border-left:5px solid rgba(119,126,139,1);
		}
	}
	a{
		display: block;
		margin-left: 5px;
		font-size: 1em;
		color: grey;
		overflow: hidden;
		a:hover{
			text-decoration: underline;	
		}
	}
	.labelUnclicked{
		border-left:5px solid #C1C5C9;
	}
	.labelClicked {
		border-left:5px solid #41AAF5 !important;
		color: #41AAF5 !important;
		a{
			color: #41AAF5 !important;
		}
	}
}


.journalEditor{
	display: none;
	position:absolute;
	background-image:linear-gradient(to top,rgba(0,0,0,0),rgba(0,0,0,0.1));
	top: 0px;
	width:100%;
	height: 4em;
	z-index: 1;
	i{
		float: right;
		margin-right: 10px;
		color: white;
		font-size: 1.5em;
	}
	i:hover{
		color: #41AAF5;
	}
}