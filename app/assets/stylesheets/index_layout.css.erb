	width:50px;
	height:50px;
	position:absolute;
	top:40px;
	left:200px;
	z-index:1;
}
#map_adjust:hover {
	cursor:pointer;
	cursor:hand;	
}
/*留言框*/
#commentScope {
	height:90%;
	min-height:300px;
	width:320px;
	position:absolute;
	display:none;
	top:10px;
	right:-500px;
	background:rgba(40,40,40,0.9);
	z-index:1;
	border-radius:10px;
	padding:0px;
	margin:0;
	overflow-x:visible;
	overflow-y:auto;
	-webkit-box-shadow:3px 3px 3px  #333;
}
.TripPointName {
	color:white;
	font-weight:bold;
	margin-left:10px;
}
#comment {
	background:#333;
}

/*旅行清單*/

.sociales {
	text-align: center;
	margin-bottom: 20px;
}

#next,
#prev {
	position: absolute;
	left: 100px;
	font-size: 70px;
	width: 38px;
	height: 22px;
	background-position: 0 -44px;
	background-repeat: no-repeat;
	text-indent: -9999px;
	overflow: hidden;
}
#next:hover,
#prev:hover {
	background-position:  0 0;
}
#next {
	bottom: 20px;
	background-image: url(<%=asset_path('next_v.png')%>);
	cursor: pointer;
}
#prev {
	top: 60px;
	background-image: url(<%=asset_path('prev_v.png')%>);
	cursor: pointer;
}
#next.disabled,
#prev.disabled {
	opacity: 0.2;
}


