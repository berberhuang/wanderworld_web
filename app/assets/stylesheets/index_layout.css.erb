/*關於我*********************************************************************/
#about_me {
	background-color: rgba(0, 0, 0, 0.85);
	
}
.mid_block {
	margin:0 0px 0 130px;
	width:auto;
	height:100%;
	background-repeat: no-repeat;	
	background-color:white;
}
#config {
	position:absolute;
	top:10px;
	right:10px;
	width:60px;
	height:30px;
	border-radius:5px;
	background-color: rgba(255, 255, 255, 0.85);	
	text-align: center;
	cursor:pointer;
	line-height: 30px;
}
#aboutme_background {
	-webkit-filter : none;
	width:100%;
	position:absolute;
	top:0px;
	left:130px;
	background: #F1F1F1;
}
/*編輯器*/
#aboutme_editor {
	z-index:1;
	position:relative; 
	top:80px;
	left:-80px;
	width:auto;
	margin: 0;
	padding: 0;
	float: right;
	background-color: rgba(255, 255, 255, 0.85);
	box-shadow: 0px 0px 20px rgba(0,0,0,0.5);
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}
#headDiv {
	width:100%; 
	height:20px; 
	cursor:move;
	float:left; 
	background-color: rgba(255, 255, 255, 0.85);
	border-radius: 5px 5px 0 0;
}
#close{
	cursor:pointer;
	margin:5px;
	position: absolute;
	right: 0;
}
#tabs{
	float:left;
	width: 400px;
	height: 450px;
}
.float_item {
	float:left;
	line-height: 30px;
	margin-right: 10px;
}
#about_bg {
	width:100%;

}
#about_bg_width {
	width:35px;
	float:left;
	margin: 4px 0;
}
#slider-range-min {
	width:200px;
	float:left;
	margin: 8px;
}
#filter_slider { width: 300px; }
#filter_slider > div { width: 150px; }
.float_right {
	float:right;
}
#about_title {
	width:100%;
	line-height: 20px;
}
#about_fontfamily {
	width:110px;
}
#about_fontsize {
	width:50px;
	margin: 0 10px 0 0;
	height: 30px;
}
#about_fontsize_drop {
	position: absolute;
	padding: 8px 10px;
	border: 1px solid #79B7E7;
	background-color: #FDFEFE;

}
#about_fontsize_bar {
	width:100px;
	height:5px;
}
#about_fontsize_bar a {
	width: 1em;
	height: 0.8em;

}
#about_editor {
	width:100%;
	height:100px;

}
.ui-dialog {
	font-family: 微軟正黑體;
}

/*編輯區*/
#aboutme_main {
	position:relative;
	top:50px;
	left:50px;
	width:auto;
	float:left;
	cursor:move;
}
#aboutme_main:hover #aboutme_move {
	display:block;	
}
#aboutme_main:hover {
	border: 1px coral solid;
}                
#aboutme_move {
	width:20px;
        height:20px;
	background-image: url(<%=asset_path('move2.png') %>);
	position: absolute;
	right: -25px;	
	cursor: move;
	display:none; 
}
#aboutme_title {
	min-width: 300px;
	max-width: 800px;
	word-wrap: break-word;
}
#aboutme_content {
	min-width: 300px;
	max-width: 800px;
	word-wrap: break-word;
}
