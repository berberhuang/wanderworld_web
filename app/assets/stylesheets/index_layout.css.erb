/*編輯區*/
#aboutme_main {
	position:relative;
	top:50px;
	left:50px;
	width:auto;
	float:left;
	cursor:move;
}
#aboutme_main:hover #aboutme_move {
	display:block;	
}
#aboutme_main:hover {
	border: 1px coral solid;
}                
#aboutme_move {
	width:20px;
        height:20px;
	background-image: url(<%=asset_path('move2.png') %>);
	position: absolute;
	right: -25px;	
	cursor: move;
	display:none; 
}
