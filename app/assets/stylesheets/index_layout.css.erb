	word-wrap: break-word;
}
/*漫遊日誌*********************************************************************/
.main_content {
	width:100%;
	position:absolute;
	top:40px;
	left:0px;
	min-width:1280px;
	padding:0px;
	margin:0px;
	border-width:0px;
	overflow:hidden;
	background-color: rgba(50, 50, 50, 1);
}
/*google地圖*/
#map_canvas {
	width:100%;
	height:100%;
	position:absolute;
	top:0px;
	left:130px;
	padding:0px;
	margin:0px;
	border-width:0px;
}
#map_small {
	position:absolute;
	right:0px;
	bottom:0px;
	width:260px;
	height:200px;
	background:#F1F1F1;
	z-index:4;
}
