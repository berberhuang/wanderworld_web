/*google地圖*/
#map_canvas {
	width: 100%;
	max-width: 870px;
	height:520px;
}

#map_adjust {
	width:50px;
	height:50px;
	position:absolute;
	top:40px;
	left:200px;
	z-index:1;
}
#map_adjust:hover {
	cursor:pointer;
	cursor:hand;	
}


/*旅行清單*/

.sociales {
	text-align: center;
	margin-bottom: 20px;
}

#next, #prev{
	cursor: pointer;
}



/*新增景點*/
#trip_control {
	margin: 15px 15px 15px 15px;
	padding: 0px 0px 0px 0px;
}
.place {
	margin-left:5px;
	width:180px;
}
a#add:link,a#add:visited {
	position:relative;
	left:40px;
	color:rgba(180,180,180,0.8);
	text-decoration:underline;
}
a#add:hover {
	color:white;
}
a#add:active {
	color:rgba(200,200,200,0.8)
}

/*瀏覽人次*/
#view_num {
	margin: 15px 15px 20px 15px;
	padding: 0px 0px 0px 0px;
	float:left;
	position: absolute;
	bottom: 0px;
}
#view_num span {
	color:#FC8;
	font-weight:bold;
}

/*分享*/
#sharetoFB {
	float:right;
	margin:15px 15px 20px 15px;
	position: absolute;
	bottom: 0px;
	right: 0px;
}
#share {
	float:right;
}
.icon {
	width:36px;
	height:48px;
}

//內容框

#hide_this {
	position:absolute;
	right:15px;
	top:10px;
	cursor:pointer;
}
#hide_this img {
	height:16px;
}
#move_this {
	position:absolute;
        right:30px;
        top:3px;
}
#move_this img {
        height:30px;
}

.control  {
	float:left;
	display:inline;
	height:100%;
	cursor: pointer;
	white-space : nowrap;
}
.control  img{
	width:100%;
	vertical-align : middle;
}
.control:after {
  content : ".";
  font-size : 0;
  -webkit-text-size-adjust : none;
}
.control  img:hover{
	opacity:0.7;
}

#foo {
	display:none;
}

#toolbarDiv {
	display:none;
}
#toolbar {
	display:inline;
	width:708px;
}
.slide {
	height:100%;
	overflow-x:hidden;
	overflow-y:auto;
	word-wrap:break-word;
	width:100%;
}



/*手動輸入*********************************************************************/
#add_new {
	display:none;
	padding-top: 20px;
	position: absolute !important;
	top: 80px;
	left: 20%;
	height: 34%;
	background: rgba(255,255,255,1);
	border-radius:4px;
	z-index:4;
}
#add_new img {
	width:40px;
	height:40px;
}
