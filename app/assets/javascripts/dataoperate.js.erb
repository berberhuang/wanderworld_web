//載入旅行
function loadTrip(id,tp_id){
	var b=back;
	//因應無刷新跳轉  做的上一頁紀錄
	var state={
		title:document.title,
		url:'/'+trip_id,
		trip_id:trip_id
	}
	trip_id=id;
	resetEnv();
	
	//讀取此旅行權限
	$.get("/trip/hasPermission/"+trip_id,null,function(owner){
		DataStatus.isOwner=owner;
		//取得旅行資訊
		$.get("/trip/getTrip/"+trip_id,null,function(result){
			//旅行不存在 導回首頁
			if(!result)
				window.location="/";
				
			//無刷新跳轉改變url
			window.history.pushState(state,document.title,'/'+trip_id);	
			document.title='WanderWorld地球漫遊 - '+result[0].name;
			
			//設定頭像名字
			if(result[2]){
				$('#person_avatar img').attr('src','https://graph.facebook.com/'+result[2]+'/picture');
			}			
			$('#person_name').text(result[1]);
			user_id=result[0].user_id;
			
			//設定旅行名稱
			trip_name=result[0].name;
			tripPointList.setTripName(trip_name);
			
			//設定旅行日期
			var date;
			if(result[0].start_date=='')
				date='請輸入日期';
			if(result[0].start_date==result[0].end_date){
				date=result[0].start_date.replace(/-/g,'/');
			}else{		
				date=result[0].start_date.replace(/-/g,'/')+' - '+result[0].end_date.replace(/-/g,'/');
			}
			tripPointList.setTripDate(date);
			
			//設定狀態
			
			var status;
			if( getdate() < result[0].start_date ){
				status='倒數 '+getDateDiff(result[0].start_date,getdate())+' 天';
			}else if(getdate() >= result[0].start_date && getdate() <= result[0].end_date){
				status='正在旅行';
			}else if( getdate() > result[0].end_date ){
				status='';
			}
			tripPointList.setTripStatus(status);
			
			//設定瀏覽次數
			$.get('/trip/getTripCount',{id:trip_id},function(r){
				$('#count').text(r);
			});			
		});
		reLayout();			
		$('#load_point').show();		
		//取得景點
		$.get("/trip/getTripPointList/"+id,null,function(result){
			var groups=result[0];
			var trip_points=result[1];
			var places=result[2];
			
			tripPointList.setGroupList(groups);		
			for(i=0; i<trip_points.length;i++){
				trip_points[i].place=places[i];
			}
			
			DataStatus.groupList=groups;
			DataStatus.tripPointList=trip_points;
			
			tripPointList.setTripPointList(trip_points);
			tripPointList.UiControl.updateMark();
			
			PathOnMap.updateMark();
					
	/*		
			$('#group_bottom').appendTo($('.trip_point_all'));
			redrawLine();
			
			//reSortable(edit_s);
			//暴力解迷
			//ui_updateNumberMark();
			*/
			
			
			//設定地圖
			if(result[0].length != 0)
				computeMap();
			else{
				map.setCenter(new google.maps.LatLng(23.80, 121.500));
				map.setZoom(8);
			}				
			setTimeout('reLayout();',500);
			tripPointList.UiControl.ownerModeSwitch(DataStatus.isOwner);
			$('#load_point').hide();	

			reLayout();
		});						
	});			
	
}

